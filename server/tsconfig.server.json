{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/server",
    "moduleResolution": "Node",
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,

    "skipLibCheck": true,
    "noEmit": false
  },
  "include": ["./**/*", "../shared/**/*"],
  "exclude": ["../client", "../node_modules"]
}
